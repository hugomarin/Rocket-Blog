<!doctype html>
<html lang="esp">

<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
	
	<head>
	  <meta charset="utf-8" />
	
	  <!-- Set the viewport width to device width for mobile -->
	  <meta name="viewport" content="width=device-width" />
	
	  <title>{% block title %}{% endblock %}</title>
	  
	  <!-- Included CSS Files -->
	  {{ "foundation.css" | asset_url | stylesheet_tag }}
	  {{ "app.css" | asset_url | stylesheet_tag }}
	  
	  <!-- Included JS Files -->
	  {{ "modernizr.foundation.js" | asset_url | script_tag }}
	  
	  <!-- Typekit -->
	  <script type="text/javascript" src="//use.typekit.net/pik2cjs.js"></script>
	  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
	</head>
	<body>
	
	{% include "header" %}
	
	{% block content %}{% endblock %}  
	 
	{% include "footer" %} 
	  
	  
	  <!-- Included JS Files (Uncompressed) -->
	  <!--
		{{ "jquery.js" | asset_url | script_tag }}
		{{ "jquery.foundation.mediaQueryToggle.js" | asset_url | script_tag }}
		{{ "jquery.foundation.forms.js" | asset_url | script_tag }}
		{{ "jquery.event.move.js" | asset_url | script_tag }}
		{{ "jquery.event.swipe.js" | asset_url | script_tag }}
		{{ "jquery.foundation.navigation.js" | asset_url | script_tag }}
		{{ "jquery.foundation.buttons.js" | asset_url | script_tag }}
	   {{ "jquery.foundation.topbar.js" | asset_url | script_tag }}
	   {{ "jquery.foundation.magellan.js" | asset_url | script_tag }}
	  -->
	  
	  <!-- Included JS Files (Compressed) -->
	  {{ "foundation.min.js" | asset_url | script_tag }}
	  
	  <!-- Initialize JS Plugins -->
	  {{ "app.js" | asset_url | script_tag }} 
	</body>
</html>
